<!DOCTYPE html>
<html>

<head>
  <meta charset="utf-8">
  <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
  <meta name="description" content="">
  <meta name="author" content="">
  <title>Food Truck Frenzy</title>
  <!-- Core theme CSS (includes Bootstrap)-->
  <link href="../css/styles.css" rel="stylesheet" type="text/css">
  <!-- Fonts CSS-->
  <link rel="stylesheet" href="../css/heading.css" type="text/css">
  <link rel="stylesheet" href="../css/body.css" type="text/css">
</head>

<body>
  <nav class="navbar navbar-expand-lg bg-secondary fixed-top" id="mainNav">
    <div class="container"><a class="navbar-brand js-scroll-trigger" href="/">FOOD TRUCK FRENZY</a>
    </div>
  </nav>
  <header class="masthead bg-primary text-white text-center">
    <div class="container d-flex align-items-center flex-column">
      <br>
      <br>
      <h1 id="{{truck.dataValues.id}}" class="masthead-heading mb-0 truck-id">{{truck.dataValues.name}}</h1>
      <br>
      <button id="edit-truck" class="btn btn-secondary float-center" data-toggle="modal" data-target="#edit-truck-modal"
        data="{{truck.dataValues.id}}">Edit Truck</button>
      <br>

      <div class="modal fade" id="edit-truck-modal" role="dialog">
        <div class="modal-dialog">
          <!-- Modal content-->
          <div class="modal-content">
            <div class="modal-content justify-content: center">
              <div class="modal-header text-center">
                <h4 class="modal-title w-100 font-weight-bold margin-left">Sign in</h4>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                  <span aria-hidden="true">&times;</span>
                </button>
              </div>

              <div class="modal-body">
                <form id="cms">
                  <div class="form-row">
                    <div class="form-group col-md-6">
                      <label for="title">Name:</label>
                      <input placeholder="{{truck.dataValues.name}}" type="text" class="form-control" id="edit-name">
                    </div>
                    <div class="form-group col-md-6">
                      <label for="title">Phone:</label>
                      <input placeholder="{{truck.dataValues.phone_number}}" type="text" class="form-control"
                        id="edit-phone">
                    </div>
                  </div>
                  <div class="form-row">
                    <div class="form-group col-md-4">
                      <label for="title">City:</label>
                      <input placeholder="{{truck.dataValues.city}}" type="text" class="form-control" id="edit-city">
                    </div>
                    <div class="form-group col-md-4">
                      <label for="title">State:</label>
                      <input placeholder="{{truck.dataValues.state}}" type="text" class="form-control" id="edit-state">
                    </div>
                    <div class="form-group col-md-4">
                      <label for="title">Country:</label>
                      <input placeholder="{{truck.dataValues.country}}" type="text" class="form-control"
                        id="edit-country">
                    </div>
                  </div>
                  <div class="form-row">
                    <div class="form-group col-md-9">
                      <label for="title">Image URL:</label>
                      <input placeholder="{{truck.dataValues.img_url}}" type="text" class="form-control" id="edit-img">
                    </div>
                    <div class="form-group col-md-3 img_thumb">
                      <img id="img_thumb" src="{{truck.dataValues.img_url}}" alt="thumb"
                        style="width:auto;height:60px;">
                    </div>
                  </div>
                  <div class="form-row">
                    <label for="body">Description:</label>
                    <textarea placeholder="{{truck.dataValues.description}}" class="form-control" rows="3"
                      id="edit-description"></textarea>
                  </div>
                  <br />
                  <button id="edit-submit" type="submit" class="btn btn-secondary float-center submit"
                    data="{{truck.dataValues.id}}">Submit</button>
                </form>
              </div>
            </div>
          </div>
        </div>
        <br>
      </div>
  </header>
  <section class="page-section portfolio" id="portfolio">
    <div class="container padding_bottom">

      <!-- Portfolio Section Heading-->
      <div class="text-center">
        <h2 class="page-section-heading text-secondary mb-0 d-inline-block padding_top">Menu Items</h2>
      </div>
      <!-- Icon Divider-->
      <div class="divider-custom">
        <form class="clearfix mb-4 form-inline" action="POST">
        <div class="form-row">
          <div class="form-group col-md-6">
            <label for="item-name"></label>
            <input type="text" class="block" id="item-name" class="form-control" aria-describedby="item-name"
            placeholder="Add item">
          </div>
          <div class="form-group col-md-6">
            <label for="item-price"></label>
            <input type="text" class="block" id="item-price" class="form-control" aria-describedby="item-price"
            placeholder="Add price per">
          </div>
        </div>
        <button id="submit" class="btn btn-secondary float-center">Add</button>
      </form>
      </div>
      <!-- Portfolio Grid Items-->
      <ul id="item-list" class="list-group-flush">

      </ul>
      <div class="row justify-content-center">
        <!-- Portfolio Items-->
      </div>
    </div>
    </div>
    </div>
    </div>
    <section class="page-section bg-primary text-white mb-0" id="about">
      <div class="container">
        {{!-- LISTING --}}
        <div class="group-list">
          <div class="container"></div>
        </div>
        <div class="text-center">
          <h2 class="page-section-heading d-inline-block text-white"></h2>
        </div>
    </section>
    {{!-- FOOTER --}}
    <footer class="footer text-center">
