<div id="home">
  <div class="container">
    <div class="row">
      <div class="col-8 offset-2">
        <h1>{{msg}}</h1>
        <h2>This is our Home Page!</h2>
        <form class="clearfix mb-4" action="POST">
          <div class="form-group">
            <label for="truck-name">Example Text</label>
            <input type="text" id="truck-name" class="form-control" aria-describedby="truck-name"
              placeholder="Enter Example Text">
          </div>
          <button id="submit" class="btn btn-primary float-right">Submit</button>
        </form>
        <h3>Food Trucks:</h3>
        <ul id="truck-list" class="list-group">
          {{#each trucks}}
          <li data-id="{{this.id}}" class="list-group-item">
            <a href="/trucks/{{this.id}}">{{this.name}}</a>
            <button class="btn btn-danger float-right delete">ï½˜</button>
          </li>
          {{/each}}
        </ul>


        <a class="btn btn-light" href="/trucks">Manage Food Truck</a>

      </div>
    </div>
  </div>
</div>

<script type="text/javascript" src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.2.1/jquery.min.js"></script>
<script src="/js/index.js"></script>